@model LayerEntity.Entities.Mesaj
@{
    ViewData["Title"] = "MesajGonder";
    Layout = "~/Views/Shared/OnYuzSablon.cshtml";
}
<h1>İletişim</h1>
<br />
<br />

<div class="row">
    <div>
        <form asp-action="MesajGonder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MesajKullaniciAdi" class="control-label"></label>
                <input asp-for="MesajKullaniciAdi" class="form-control" />
                <span asp-validation-for="MesajKullaniciAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MesajKullaniciEposta" class="control-label"></label>
                <input asp-for="MesajKullaniciEposta" class="form-control" />
                <span asp-validation-for="MesajKullaniciEposta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Konu" class="control-label"></label>
                <input asp-for="Konu" class="form-control" />
                <span asp-validation-for="Konu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MesajIcerik" class="control-label"></label>
                <input asp-for="MesajIcerik" class="form-control" />
                <span asp-validation-for="MesajIcerik" class="text-danger"></span>
            </div><br /><br />
            <div class="form-group">
                <input type="submit" value="GÖNDER" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
