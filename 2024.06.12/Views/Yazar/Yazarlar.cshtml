@model List<LayerEntity.Entities.Yazar>
@{
    ViewData["Title"] = "Yazarlar";
    Layout = "~/Views/Shared/OnYuzSablon.cshtml";
}

<h1>Yazarlar</h1>
<div>
    @foreach (var yazar in Model)
    {
        <div style="width:32%; height:240px; float:left">
            <div style="width:100%; height:200px">
                <img src="~/images/@yazar.YazarResmi" style="width:50%" />
            </div>
            <div style="width:100%; height:30px">
                <a href="#" class="btn btn-warning">@yazar.YazarAdi</a>
            </div>
        </div>
        <div style="width:2%; height:240px; float:left">
            &nbsp;
        </div>
    }
</div>